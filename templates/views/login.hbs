<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    {{>navbar}}
    <div class="container">
        <div class="row my-5">
            <div class="col-sm-6 col-md-4">

            </div>
            <div class="col-sm-6 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center">Login Form</h2>
                        <div class="account">
                            <img src="images/profile-pic.png" alt="profile image" width="100%">
                            <form class="form-signin" action="/login" method="POST">
                                <input type="email" class="form-control mt-3" placeholder="Email" required name="email">
                                <input type="password" class="form-control mt-3" placeholder="Password" required
                                    name="password">
                                <button class="btn btn-lg btn-primary btn-block mt-3" type="submit"> Sign In</button>
                                <label class="checkbox pull-left mt-3">
                                    <input type="checkbox" value="remember-me">
                                    Remember Me
                                </label>
                            </form>
                        </div>

                        <a href="/register" class="text-center new-account"> Create Account</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">

            </div>
        </div>
    </div>
</body>